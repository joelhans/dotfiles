{
	// Base settings	
	"files.autoSave": "onWindowChange",
	"editor.fontFamily": "'Fira Code','Roboto Mono for Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"editor.fontSize": 14,
	"editor.tabSize": 2,
	"keyboard.dispatch": "keyCode",
	"editor.autoIndent": false,
	"explorer.confirmDelete": false,
	"breadcrumbs.enabled": true,
	"editor.minimap.enabled": false,
	"workbench.colorTheme": "Dracula",
	"files.exclude": {
		"node_modules": true,
		"yarn.lock": true,
		".vscode/": true,
	},
	"explorer.confirmDragAndDrop": false,
	"window.zoomLevel": 0,
	"workbench.iconTheme": "vscode-icons",

	// Markdown specific settings
	"[markdown]": {
    // "editor.fontSize": 14,
		"editor.formatOnSave": true,
		"editor.wordWrapColumn": 80,
		"editor.wordWrap": "bounded",
		"editor.renderWhitespace": "none",
		"editor.acceptSuggestionOnEnter": "off",
		"editor.lineNumbers": "off",
	},

	// PostCSS Sorting
	"postcssSorting.config": {
    "order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "at-rules",
      "rules"
    ],
    "properties-order": [
			"@apply",
			"position",
			"z-index",
			"top", 
			"right", 
			"bottom", 
			"left",
			"display",
			"flex",
			"flex-flow",
			"align-content",
			"align-items",
			"overflow",
			"overflow-x",
			"overflow-y",
			"box-sizing",
			"width",
			"height",
			"max-width",
			"max-height",
			"margin",
			"margin-top",
			"margin-right",
			"margin-bottom",
			"margin-left",
			"padding",
			"padding-top",
			"padding-right",
			"padding-bottom",
			"padding-left",
			"border",
			"border-top",
			"border-right",
			"border-bottom",
			"border-left",
			"background",
			"background-color",
			"background-image",
			"color",
			"font-family",
			"font-size",
			"font-style",
			"font-weight",
			"line-height",
			"text-align",
			"text-decoration",
			"text-transform",
			"text-shadow",
			"border",
			"border-radius",
			"box-shadow",
			"cursor",
			"content",
		]
	},

	// Markdownlint config
	"markdownlint.config": {
		"MD002": false,
		"MD026": { "punctuation" : ".,;:" },
		"MD033": { "allowed_elements" : "<iframe>" },
	},

	// SpellRight config
	"spellright.addToSystemDictionary": true,
}
