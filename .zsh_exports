# Set the shell
export SHELL=/bin/zsh

# Default editor
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='nano'
else
  export EDITOR='nano'
fi

# 1Password
export SSH_AUTH_SOCK=~/.1password/agent.sock

# Node.js
export NODE_OPTIONS=--openssl-legacy-provider 

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"
